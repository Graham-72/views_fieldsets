/**
 * Helper to render fieldsets.
 *
 * @see views_fieldsets_preprocess_views_view_fields__2().
 */
function views_fieldsets_render__simple($fields, $vars) {
  $display_handler = $vars['view']->display_handler;
  $hierarchy = $vars['hierarchy'];

//dpm(array_keys($fields));
  $original_vars = $vars;
  $output = '';

  if (isset($original_vars['fieldset_field'])) {
    $fieldset_field = $vars['fieldset_field'];
    $info_field = $hierarchy['fields'][$fieldset_field];
    $views_field = $vars['fields'][$fieldset_field];
//dpm($views_field, $fieldset_field);

    $output .= '<fieldset><legend>' . $views_field->label . '</legend>';
  }

  foreach ($fields as $field_name => $info_field) {
//drupal_set_message($field_name);
    $views_field = $vars['fields'][$field_name];

    if (views_fieldsets_field_is_fieldset($field_name, $display_handler)) {
      // Prep children & fieldset field options/settings.
      $fields = !empty($info_field->children) ? $info_field->children : array();
      $vars['fieldset_field'] = $field_name;

      // Render fieldset + children.
      $output .= views_fieldsets_render__simple($fields, $vars);
    }
    else {
      // Render single field.
      $output .= $views_field->wrapper_prefix . $views_field->label_html . $views_field->content . $views_field->wrapper_suffix . "\n";
    }
  }

  if (isset($original_vars['fieldset_field'])) {
    $fieldset_field = $vars['fieldset_field'];
    $info_field = $hierarchy['fields'][$fieldset_field];
    $views_field = $vars['fields'][$fieldset_field];

    $output .= '</fieldset>';
  }

  $output .= "\n";

  return $output;
}


/**
 * Implements template_preprocess_views_view_fields().
 *
 * @see views_fieldsets_preprocess_views_view_fields().
 *
 * THIS FUNCTION IS EVIL
 */
function views_fieldsets_preprocess_views_view_fields__1(&$variables) {
  $view = $variables['view'];
  $display_handler = $view->display_handler;
  $fields = $display_handler->get_option('fields');

  $fieldsets = views_fieldsets_field_options_to_fieldsets_1d($fields);
  if ($fieldsets && array_filter($fieldsets)) {
    $hierarchy = views_fieldsets_hierarchy_info($display_handler, $fieldsets);

    $output = $open_fieldsets = array();
    $last_field = $last_field_name = $last_fieldset = $last_fieldset_name = NULL;
    foreach ( $hierarchy['fields'] as $field_name => $field ) {
      if (isset($variables['fields'][$field_name])) {
        $open_fieldset = end($open_fieldsets);
        if ( $open_fieldset && $field->info->depth == $hierarchy['fields'][$open_fieldset]->info->depth ) {
          // End fieldset
          $var_field = clone $variables['fields'][$open_fieldset];
          $var_field->content = '</fieldset>';

          $output[$open_fieldset . '__end'] = $var_field;

          array_pop($open_fieldsets);
        }

        if (views_fieldsets_field_is_fieldset($field_name, $display_handler)) {
          // Start fieldset
          $open_fieldsets[] = $field_name;
          $last_fieldset_name = $field_name;
          $last_fieldset = $field;

          $var_field = $variables['fields'][$field_name];
          $var_field->content = '<fieldset><legend>' . $var_field->label . '</legend>';
          $var_field->label = $var_field->label_html = '';

          $output[$field_name . '__start'] = $var_field;
        }
        else {
          // Normal field
          $output[$field_name] = $variables['fields'][$field_name];
        }

        $last_field = $field;
      }
    }

    // End open fieldsets
    while ( $open_fieldsets ) {
      $open_fieldset = array_pop($open_fieldsets);
      $var_field = clone $variables['fields'][$open_fieldset];
      $var_field->content = '</fieldset>';
      $output[$open_fieldset . '__end'] = $var_field;
    }

//dpm($output);
    $variables['fields'] = $output;

#static $ass;
#!$ass && dpm($output);
#$ass = 1;

  }
}

